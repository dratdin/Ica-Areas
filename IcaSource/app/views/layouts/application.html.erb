<!DOCTYPE html>
<html>
<head>
  <title>Ica Areas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<div class="menu">
				<% if user_signed_in? %>
					<ul class="user-actions">
						<li class="user-photo">Photo</li>
						<li class="user-name">Name</li>
						<li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
				    </ul>
				    <%= link_to "Ica", root_path , class: "logo" %>
				    <ul class="ica-actions">
						<li>Areas</li>
						<li><input type="text" name="search" class="ts_input" value="Search"></li>
					</ul>
				<% else %>
				    <ul class="user-actions">
						<li class="sign-in"><%= link_to 'Sign In', new_user_session_path %></li>
				    	<li><%= link_to 'Sign Up', new_user_registration_path %></li>
				    </ul>
				    <!-- <div class="logo">Ica</div> -->
				    <%= link_to "Ica", root_path , class: "logo" %>
				    <ul class="ica-actions">
				    	<li><input type="text" name="search" class="ts_input" value="Search"></li>
				    </ul>
				<% end %>
		</div> 
	</header>

	<%= yield %>

</body>
</html>
